    <label for="x2">X<sub>2</sub></label>
    <input type="text" name="x2" id="x2" value="-1" disabled="disabled">
    </div>
    <div class="form_elem">
    <label for="y1">Y<sub>1</sub></label>
    <input type="text" name="y1" id="y1" value="-1" disabled="disabled">
    <label for="y2">Y<sub>2</sub></label>
    <input type="text" name="y2" id="y2" value="-1" disabled="disabled">
    </div>

    <h3>Select a label</h3>

